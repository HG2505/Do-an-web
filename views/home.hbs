
<div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
    {{#each products}}
    <div class="col">
        <div class="card h-100 shadow-sm border-0">
            <div class="text-center p-3">
                <img src="{{this.image}}" class="card-img-top" alt="{{this.title}}" 
                     style="max-height: 200px; object-fit: contain;">
            </div>
            
            <div class="card-body d-flex flex-column">
                <small class="text-muted text-uppercase fw-bold">{{this.brand}}</small>
                
                <h5 class="card-title fs-6 mt-1">{{this.title}}</h5>
                
                <p class="card-text text-danger fw-bold fs-5 mb-auto">
                    {{this.price}} đ
                </p>
            </div>
            
            <div class="card-footer bg-white border-0 pb-3">
                <a href="#" class="btn btn-outline-primary w-100">
                    <i class="bi bi-cart-plus"></i> Thêm vào giỏ
                </a>
            </div>
        </div>
    </div>
    {{/each}}
</div>